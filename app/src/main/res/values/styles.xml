<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Einheitenrechner" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/einheitenrechnerPrimary</item>
        <item name="colorPrimaryDark">@color/einheitenrechnerPrimaryDark</item>
        <item name="colorAccent">@color/einheitenrechnerAccent</item>
    </style>

    <style name="EinheitenrechnerStyle" parent="Theme.AppCompat">
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="colorPrimary">@color/einheitenrechnerPrimary</item>
        <item name="colorPrimaryDark">@color/einheitenrechnerPrimaryDark</item>
        <item name="colorAccent">#FFF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Teiler" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teilerPrimary</item>
        <item name="colorPrimaryDark">@color/teilerPrimaryDark</item>
        <item name="colorAccent">@color/teilerAccent</item>
    </style>

    <style name="TeilerStyle" parent="Theme.AppCompat">
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="colorPrimary">@color/teilerPrimary</item>
        <item name="colorPrimaryDark">@color/teilerPrimaryDark</item>
        <item name="colorAccent">@color/teilerAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Settings" parent="AppTheme">
        <item name="colorPrimary">@color/settingsPrimary</item>
        <item name="colorPrimaryDark">@color/settingsPrimaryDark</item>
        <item name="colorAccent">@color/settingsAccent</item>
    </style>

    <style name="Table" parent="AppTheme">
        <item name="colorPrimary">@color/tablePrimary</item>
        <item name="colorPrimaryDark">@color/tablePrimaryDark</item>
        <item name="colorAccent">@color/tableAccent</item>
    </style>

    <style name="ButtonCapsT" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="ButtonCapsF" parent="ButtonCapsT">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DashButton" parent="ButtonCapsT">
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>